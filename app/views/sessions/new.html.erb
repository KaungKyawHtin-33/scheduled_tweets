<h1 class="mb-3">Sign In Form</h1>

<%= form_with url: sign_in_path do |form| %>
    <div class="mb-3">
        <%= form.label :email, class: "form-label" %>
        <%= form.text_field :email, class: "form-control w-50", placeholder: "example@gmail.com" %>
    </div>

    <div class="mb-3">
        <%= form.label :password, class: "form-label" %>
        <%= form.password_field :password, class: "form-control w-50", placeholder: "password" %>
    </div>

    <div class="mb-3">
        <%= form.submit "Sign In", class: "btn btn-primary px-4" %>
    </div>

    <div class="mb-3">
        Still don't have an account? <%= link_to "Sign Up", sign_up_path %>
    </div>
<% end %>